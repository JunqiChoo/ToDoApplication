<%- include("partials/head") %>

    <body>
        <%- include("partials/navbar") %>
        <div class="container mt-3 ">
            <div class="row">
                <div class="col-8 offset-2">

                    <% if(success.length>0){ %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= success %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                        </div>
                        <% } %>


                            <form class="d-flex " method="POST">
                                <input type="text" class="form-control" id="task" name="task"
                                    placeholder="Please Enter Task" required>
                                <button type="submit" class="btn btn-primary ml-3">Add</button>
                            </form>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-8 offset-2">
                    <% if(ListOftask.length !=0) {%>
                        <ul class="list-group">
                            <% for(var item of ListOftask){ %>
                                <form action="/main/<%= item._id %>?_method=DELETE" method="POST">
                                    <li class="list-group-item">
                                        <%= item.task%>
                                            <a href="/main/edit/<%= item._id %>"
                                            class="btn btn-warning btn-sm float-right">Edit</a>
                                            <button class="btn btn-danger btn-sm float-right">Delete</button>
                                    </li>
                                </form>
                                <% } %>
                        </ul>
                        <% }else{ %>
                            <small class="d-flex justify-content-center">No task Available.</small>
                            <% } %>
                </div>
            </div>
        </div>
    </body>

    </html>